<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#81A6D7" />
            <stroke
                android:width="1dp"
                android:color="#0069B4" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#81A6D7"
                android:endColor="#0069B4"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#0069B4" />
            <corners
                android:radius="4dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>
    </selector>
    