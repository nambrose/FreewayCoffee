<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
<LinearLayout
    android:layout_width="700dp"
    android:layout_height="match_parent"
    android:layout_marginLeft="100dp"
    android:id="@+id/fc_om_order_main_list_child_item_lay_main"
    
    android:orientation="horizontal" >
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fc_om_order_main_list_child_item_lay"
    android:orientation="horizontal" >
    <TextView
		android:layout_width="75dp" 
    	android:layout_height="fill_parent"
    	android:textColor="@color/White"
    	
    	android:includeFontPadding="true"
    	android:id="@+id/fc_om_order_main_list_child_item_type">

        </TextView>
        
    
     <TextView
		android:layout_width="500dp" 
    	android:layout_height="wrap_content"
    	android:textColor="@color/White"
    	android:includeFontPadding="true"
    	android:id="@+id/fc_om_order_main_list_child_item_description">

        </TextView>
         <TextView
		android:layout_width="75dp" 
    	android:layout_height="fill_parent"
    	android:textColor="@color/White"
    	android:includeFontPadding="true"
    	android:id="@+id/fc_om_order_main_list_child_item_cost">

        </TextView>
     </LinearLayout>
</LinearLayout>
</LinearLayout>