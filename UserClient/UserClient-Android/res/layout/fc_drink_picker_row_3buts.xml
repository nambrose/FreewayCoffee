<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:id="@+id/lineItem"
				xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:gravity="center_vertical">
 
				<ImageView
				android:layout_width="44dip"
				android:layout_height="44dip"
				android:layout_marginLeft="10dip" 
				android:id="@+id/fc_drink_picker_row_img"
				android:layout_centerVertical="true"
				android:layout_alignParentLeft="true" />
 

				<TextView android:id="@+id/fc_drink_picker_row_text"
						  android:layout_height="wrap_content"
						  android:layout_marginLeft="10dip"
						  android:textSize="20sp"
						  android:textColor="@color/Black" android:layout_width="wrap_content"
						  android:layout_toRightOf="@+id/fc_drink_picker_row_img"
						  android:layout_toLeftOf="@+id/fc_drink_picker_row_cost"
				></TextView>
				<TextView android:id="@+id/fc_drink_picker_row_cost"
						  android:layout_height="wrap_content"
						  android:layout_width="wrap_content"
						  android:layout_marginLeft="4dip" 
						  android:textSize="10sp"
						  android:textColor="@color/Black"			  
						  android:layout_toLeftOf="@+id/fc_drink_picker_row_remove_button"
						  android:layout_alignParentBottom="true"></TextView>
	   
	   
				<TextView android:id="@+id/fc_drink_picker_row_small_text"
						  android:layout_height="wrap_content"
						  android:layout_marginLeft="10dip" 
						  android:textSize="10sp"
						  android:textColor="@color/Black" android:layout_width="wrap_content"
						  android:layout_toRightOf="@+id/fc_drink_picker_row_img"
						  android:layout_toLeftOf="@+id/fc_drink_picker_row_cost"
						  android:layout_below="@+id/fc_drink_picker_row_text"
						  
				></TextView>
				
				 <com.freewaycoffee.client.FreewayCoffeeNoParentPressImageButtonView
	  			 android:id="@+id/fc_drink_picker_row_remove_button" 
				android:layout_height="24dp" android:layout_width="24dp"
				android:layout_toLeftOf="@+id/fc_drink_picker_row_edit_button"
				android:background="#00000000"
				android:layout_alignParentBottom="true"  android:src="@+drawable/fc_remove_list_right"/>
				
				<com.freewaycoffee.client.FreewayCoffeeNoParentPressImageButtonView 
				android:id="@+id/fc_drink_picker_row_edit_button" 
				android:layout_height="24dp" android:layout_width="24dp"
				android:layout_toLeftOf="@+id/fc_drink_picker_row_add_button"
				android:layout_alignParentBottom="true" android:src="@+drawable/fc_edit_list_right"
				android:background="#00000000"
				/>
				
				<com.freewaycoffee.client.FreewayCoffeeNoParentPressImageButtonView 
				android:id="@+id/fc_drink_picker_row_add_button" 
				android:layout_height="24dp" android:layout_width="24dp"
				android:layout_alignParentRight="true"
				android:layout_alignParentBottom="true" android:src="@+drawable/fc_add_list_right"
				android:background="#00000000"
				/>
				
 
 
</RelativeLayout>
