<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">
    

    <TextView 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:ellipsize ="none"
    	android:textColor="@color/Black"
    	android:textSize="20dip"
    	android:layout_alignParentTop="true"
    	android:layout_centerHorizontal="true"
    	android:layout_marginBottom="10dp"
    	android:id="@+id/fc_add_edit_drink_type_edit"
    	>
    	</TextView>
  
    <TextView 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:text="@string/fc_drink_name"
    	android:ellipsize ="none"
    	android:textColor="@color/Black"
    	android:layout_alignParentLeft="true"
    	android:layout_below="@+id/fc_add_edit_drink_type_edit"
    	android:layout_marginBottom="10dp"
    	android:layout_marginRight="5dp"
    	android:layout_marginLeft="5dp"
    	android:id="@+id/fc_add_edit_drink_name_label">
    	</TextView>
    <EditText
    	android:layout_width="200dp" 
    	android:layout_height="wrap_content"  	
    	android:lines="1"
    	android:scrollHorizontally="true"
    	android:selectAllOnFocus="false"
    	android:textColor="@color/Black"
    	android:background="@drawable/fc_edit_box_bg_drawable"
    	android:inputType="text|textNoSuggestions"
    	android:layout_toRightOf="@+id/fc_add_edit_drink_name_label"
    	android:layout_below="@+id/fc_add_edit_drink_type_edit"
    	android:layout_marginBottom="10dp"
    	android:id="@+id/fc_add_edit_drink_name_edit">
    </EditText>
    
     
  
    
        <CheckBox android:id="@+id/fc_add_edit_drink_always_include"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:textColor="@color/Black"
            android:textSize="10dip"
            android:layout_below="@+id/fc_add_edit_drink_name_edit"
            android:layout_alignLeft="@+id/fc_add_edit_drink_name_edit"
            android:text="@string/fc_always_include_in_order"
         /> 

</RelativeLayout>
