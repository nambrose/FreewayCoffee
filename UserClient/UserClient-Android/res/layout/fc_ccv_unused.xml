<?xml version="1.0" encoding="utf-8"?>

  <LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:background="@color/White"
  android:layout_width="fill_parent"
  android:layout_marginTop="10dp"
  android:id="@+id/fc_credit_card_ccv_lay"
  android:layout_below="@+id/fc_credit_card_exp_lay"
  android:layout_marginLeft="10dp"
  android:layout_height="wrap_content">
  
  
  	
  	<TextView  
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content"
    android:textSize="12dip"
    android:id="@+id/fc_credit_card_ccv_label"
  	android:textColor="@color/Black"
  	android:text="@string/fc_credit_card_ccv_label"
  	>
  	</TextView>
  	
  	
  	  <EditText
    	android:layout_width="36sp" 
    	android:layout_height="wrap_content" 
    	android:lines="1"
    	android:textSize="12sp"
    	android:scrollHorizontally="false"
    	android:selectAllOnFocus="true"
    	android:textColor="@color/Black"
    	android:layout_marginLeft="10dp"
    	android:inputType="number"
    	android:background="@drawable/fc_edit_box_bg_drawable"
    	android:id="@+id/fc_credit_card_ccv">
    </EditText>
  	
  	</LinearLayout>
  